{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "noEmit": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,

    "removeComments": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
